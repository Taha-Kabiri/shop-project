    position: relative;
    margin-top: 50px;
  }

  .character-container {
    position: absolute;
    top: -60px;
    left: 50%;
    transform: translateX(-50%);
  }
  .avatar {
    width: 90px;
    height: 90px;
    background: #967e76;
    border-radius: 50% 50% 45% 45%;
    position: relative;
    border: 3px solid #fff;
    transition: all 0.3s ease;
  }
  .eye {
    position: absolute;
    width: 10px;
    height: 10px;
    background: #2d2424;
    border-radius: 50%;
    top: 35px;
  }
  .left-eye {
    left: 22px;
  }
  .right-eye {
    right: 22px;
  }
  .hand {
    position: absolute;
    width: 30px;
    height: 30px;
    background: #967e76;
    border: 2px solid #fff;
    border-radius: 50%;
    bottom: -8px;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    z-index: 10;
  }
  .left-hand {
    left: -8px;
  }
  .right-hand {
    right: -8px;
  }
  .avatar.covering .left-hand {
