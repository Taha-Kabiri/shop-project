  }

  .bg-grid {
    position: absolute;
    width: 100%;
    height: 100%;
    background-image: linear-gradient(
        rgba(150, 126, 118, 0.1) 1px,
        transparent 1px
      ),
      linear-gradient(90deg, rgba(150, 126, 118, 0.1) 1px, transparent 1px);
