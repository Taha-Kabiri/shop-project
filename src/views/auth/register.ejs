<div class="auth-body">
  <div class="bg-grid"></div>

  <div class="glass-card">
    <div class="character-container">
      <div class="avatar" id="avatar">
        <div class="hand left-hand"></div>
        <div class="hand right-hand"></div>
        <div class="face">
          <div class="eye left-eye"></div>
          <div class="eye right-eye"></div>
          <div class="nose"></div>
        </div>
      </div>
    </div>

    <h2 class="auth-title">عضویت در T-KALA</h2>

    <%- include('../partials/message') %>

    <form method="POST" action="/api/auth/register">
      <div class="input-group">
        <label for="name">نام و نام خانوادگی</label>
        <input
          type="text"
          id="name"
          name="name"
          required
          placeholder="نام خود را وارد کنید"
        />
      </div>

      <div class="input-group">
        <label for="email">ایمیل</label>
        <input
          type="email"
          id="email"
          name="email"
          required
          placeholder="example@mail.com"
        />
      </div>

      <div class="input-group">
        <label for="password">رمز عبور</label>
        <input
          type="password"
          id="password"
          name="password"
          required
          placeholder="یک رمز عبور قوی انتخاب کنید"
          onfocus="coverEyes()"
          onblur="uncoverEyes()"
        />
      </div>

      <button type="submit" class="glass-btn">ایجاد حساب کاربری</button>
    </form>

    <p class="footer-text">
      قبلاً ثبت نام کرده‌اید؟
      <a href="/api/auth/login">وارد شوید</a>
    </p>
  </div>
</div>

<script>
  const avatar = document.getElementById("avatar");
  function coverEyes() {
    avatar.classList.add("covering");
  }
  function uncoverEyes() {
    avatar.classList.remove("covering");
  }
</script>

<style>
  .auth-body {
    background: linear-gradient(45deg, #b7c4cf, #eee3cb, #d7c0ae, #967e76);
